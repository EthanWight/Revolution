<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set splash screen background color -->
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>

        <!-- Set splash screen icon (your launcher icon) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Optional: Set icon animation duration (default is 1000ms) -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Post splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.Hw3Wight</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Hw3Wight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Hw3Wight" parent="Base.Theme.Hw3Wight" />

    <!-- Custom Popup Menu Theme -->
    <style name="AppTheme.PopupMenu" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>